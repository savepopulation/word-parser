<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearLayoutWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
    </style>

    <!-- TextView Styles -->

    <style name="BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewLabel" parent="BaseTextView">
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="TextViewContent" parent="BaseTextView">
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <!-- ProgressBar Styles -->
    <style name="DefaultProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

</resources>
